doctype html
head
  // Font special for pages
  link(href='https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i' rel='stylesheet')
  style
    include ../vendor/datepicker/daterangepicker.css
    include ../vendor/select2/select2.min.css
    include ./main.css
    include ../vendor/font-awesome-4.7/css/font-awesome.min.css
    
.page-wrapper.bg-univers.p-t-180.p-b-100.font-robo
  .wrapper.wrapper--w960
    .card.card-2
      .card-body
        h2.title INFORMATION MANAGEMENT FORM
        form(method='POST')
          .input-group
            input.input--style-2(type='text' placeholder='Employee ID' name='employee_id')
          .row.row-space
            .col-2
              .input-group
                input.input--style-2.js-datepicker(type='text' placeholder='Birthdate' name='birthday')
                i.zmdi.zmdi-calendar-note.input-icon.js-btn-calendar
            .col-2
              .input-group
                .rs-select2.js-select-simple.select--no-search
                  select(name='gender')
                    option(disabled='disabled' selected='selected') Gender
                    option Male
                    option Female
                  .select-dropdown
          .input-group
            input.input--style-2(type='text' placeholder='Last name' name='last_name')
          .input-group
            input.input--style-2(type='text' placeholder='First name' name='first_name')
          .input-group
            input.input--style-2(type='text' placeholder='Email' name='email')
          .input-group
            input.input--style-2(type='text' placeholder='City' name='city')
          .input-group
            input.input--style-2(type='text' placeholder='Adress' name='adress')
          .row
            .col-6.marginBtn
              .p-t-30
                button.btn.btn--radius.btn--green(type='button') Add
            .col-6.marginBtn
              .p-t-30
                button.btn.btn--radius.btn--green(type='button') Delete
            .col-6.marginBtn
              .p-t-30
                button.btn.btn--radius.btn--green(type='button') Update
// Jquery JS
script 
    include ../vendor/jquery/jquery.min.js
    include ../vendor/select2/select2.min.js
    include ../vendor/datepicker/daterangepicker.js
    include ../vendor/datepicker/moment.min.js

